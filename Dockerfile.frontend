FROM node:20-slim

WORKDIR /app/app/frontend

# Install curl for healthcheck
RUN apt-get update \
    && apt-get install -y --no-install-recommends curl \
    && rm -rf /var/lib/apt/lists/*

# Copy package files
COPY app/frontend/package.json app/frontend/package-lock.json ./

# Install dependencies
RUN npm ci

# Copy frontend source
COPY app/frontend ./

EXPOSE 3000

# Set HOSTNAME to 0.0.0.0 so Next.js binds to all interfaces (required for Docker)
ENV HOSTNAME=0.0.0.0

# Use dev mode for local development (can be overridden in docker-compose)
CMD ["npm", "run", "dev"]
